<IfModule mod_rewrite.c>
    RewriteEngine On

    # Redirect to public folder for assets
    RewriteCond %{REQUEST_URI} ^/clinic/cg/(css|images|pic|js)/(.*)$
    RewriteRule ^(.*)$ public/$1 [L]

    # All other requests go to index.php in root
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)$ index.php [L]
</IfModule>
